{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "src",
        "moduleResolution": "node",
        "rootDir": "src",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/*.ts"
    ]
}